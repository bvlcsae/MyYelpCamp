<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
<div>
  <a href="/new">Add Campground</a>
</div>
<ul>
  <% for (let campground of campgrounds) { %>
  <li>
    <a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a>
    &nbsp;&nbsp;
    <a href="/campgrounds/<%= campground._id %>/edit">edit</a>
    &nbsp;&nbsp;
    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" style="display:inline;">
      <button>delete</button>
    </form>
  </li>
  <% } %>
</ul>
