<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>All Campgrounds</h1>
    <div>
      <a href="/new">Add Campground</a>
    </div>
    <ul>
      <% for (let campground of campgrounds) { %>
      <li>
        <a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a>
        &nbsp;&nbsp;
        <a href="/campgrounds/<%= campground._id %>/edit">edit</a>
        &nbsp;&nbsp;
        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button>delete</button>
        </form>
      </li>
      <% } %>
    </ul>
  </body>
</html>
